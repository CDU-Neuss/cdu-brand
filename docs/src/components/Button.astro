---
interface Props {
  color?: "default" | "blue" | "gold" | "blue-inverted" | "gold-inverted" | "blue-transparent" | "gold-transparent" | "link";
  as?: "a" | "button";
  href?: string;
}

const { color = "default", as: As = "button", href } = Astro.props;
const colorClassMap = {
  blue: "btn btn-blue",
  gold: "btn btn-gold",
  "blue-inverted": "btn btn-blue-inverted",
  "gold-inverted": "btn btn-gold-inverted",
  "blue-transparent": "btn btn-blue-transparent",
  "gold-transparent": "btn btn-gold-transparent",
  link: "btn btn-link",
  default: "btn",
};

const buttonClass = colorClassMap[color as keyof typeof colorClassMap] || colorClassMap.default;
---

<As class={buttonClass} href={href}>
  <slot name="icon-left" />
  <slot />
  <slot name="icon-right" />
</As>

<style>
  @import "../styles/global.css";
  @import "../../../resources/css/components/button.css";
</style>
